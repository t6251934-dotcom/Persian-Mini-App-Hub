# Environment Variables Template
# Copy this to .env and fill in your values

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_BOT_USERNAME=@PersianMiniAppBot

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/persian_miniapp
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRATION=24h

# API Configuration
API_BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# File Storage (AWS S3 or compatible)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=persian-miniapp-assets

# Payment Gateways
ZARINPAL_MERCHANT_ID=your_zarinpal_merchant_id
IDPAY_API_KEY=your_idpay_api_key

# TON Blockchain
TON_API_KEY=your_ton_api_key
TON_NETWORK=testnet # or mainnet
PERSIAN_TOKEN_ADDRESS=your_token_contract_address

# Monitoring
SENTRY_DSN=your_sentry_dsn
ELASTICSEARCH_URL=http://localhost:9200

# AI Services
OPENAI_API_KEY=your_openai_api_key
INSTAGRAM_SCRAPER_PROXY=your_proxy_if_needed

# Social Media
TWITTER_API_KEY=your_twitter_api_key
INSTAGRAM_API_KEY=your_instagram_api_key

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password